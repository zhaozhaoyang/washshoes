/* pages/comment/comment.wxss */

.container {
  width: 95%;
  height: 100%;
  margin: 0 auto;
}

.detail {
  width: 100%;
  height: 200rpx;
  margin: 20rpx auto;
}

.section {
  width: 95%;
  margin: 0 auto;
  /* height: 198rpx; */
  box-sizing: border-box;
  padding: 14rpx;
  background: rgba(251, 251, 251, 1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tu {
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  font-size: 20rpx;
  font-weight: 400;
  color: #9f9f9fff;
  /* align-items: flex-end; */
  margin-top: 30rpx;
}

.tu image {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.btn {
  width: 522rpx;
  height: 88rpx;
  margin: 100rpx auto;
}

.pics {
  display: flex;
  flex-wrap: wrap;
}

.pics image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}

textarea {
  height: 100px;
  font-size: 24rpx;
  background: rgba(251, 251, 251, 1);
  border-radius: 4px;
}
.van-card{
  background-color: rgb(255, 255, 255)!important;
}
.van-card__header {
  align-items: center;
}

.van-card__content {
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.van-card__price{
  color: #000000FF!important;
}
.item{
  width: 100%;
}
