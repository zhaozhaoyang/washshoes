/* pages/orderdetail/orderdetail.wxss */

page, .container {
  width: 100%;
  height: 100%;
}

.container {
  background: #f8f8f8;
  width: 100%;
  height: 100%;
}

.head {
  background: #fff;
  width: 100%;
}
.close{
  width:711rpx;
  margin:15rpx auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100rpx;
}
.close .cha{
  display: block;
  width:40rpx;
  height: 40rpx;
}
.shop {
  width: 90%;
  margin: 0 auto;
  height: 30rpx;
  line-height: 30rpx;
  text-indent: 24rpx;
  margin-top: 45rpx;
  font-size: 28rpx;
  font-weight: 800;
  border-left: 4px solid rgb(142, 195, 31);
}

.adr {
  height: 25rpx;
  width: 80%;
  margin: 40rpx auto 0;
  font-size: 26rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}

.addr {
  height: 70rpx;
  line-height: 40rpx;
  width: 80%;
  margin: 20rpx auto;
  font-size: 26rpx;
  font-weight: 400;
  color: #505050ff;
}

.addr1 {
  height: 103rpx;
  line-height: 36rpx;
  width: 80%;
  margin: 20rpx auto 0;
  font-size: 26rpx;
  font-weight: 400;
  color: #505050ff;
}

.goods {
  height: 891rpx;
  width: 100%;
  background: #fff;
  margin: 18rpx auto;
}

.cell {
  margin-bottom: 100rpx;
}

.card {
  width: 100%;
  /* height: 154rpx; */
  margin: 26rpx auto;
}

.van-card {
  background: #fff !important;
}

/* .info {
  
} */

.methold {
  width: 100%;
  height: 178rpx;
  background: #fff;
  margin-top: 18rpx;
}

.pay {
  height: 114rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.pal {
  width: 90%;
  margin: 0 auto;
  height: 70rpx;
  font-size: 30rpx;
}

.active {
  background: rgb(142, 195, 31) !important;
  color: #fff;
  border: 0 !important;
}

.btn {
  background: #f8f8f8;
  border: 1px solid #505050;
  font-size: 30rpx;
  padding: 15rpx 46rpx;
}

van-button .van-button--danger {
  background-color: rgb(142, 195, 31);
  border: 0;
}

.van-submit-bar__text {
  text-align: left !important;
  margin-left: 5%;
}

.goChoos {
  width: 100%;
  font-size: 30rpx;
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}

.info {
  position: fixed;
  bottom: 0;
  height: 102rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 99;
  width: 100%;
  /* height: 435rpx; *//* margin: 0 auto; */
  background-color:#FFFFFF;
}

.total {
  padding-left: 60rpx;
}
.form-view{
  height: 100%;
}

.sub {
  width: 270rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgb(142, 195, 31)!important;
  height: 100%;
  color: #fff;
}

.van-card__price {
  color: rgb(0, 0, 0) !important;
}

.arrow {
  display: block;
  width: 14rpx;
  height: 24rpx;
  margin-right: 10%;
}

.box {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.van-popup--bottom {
  top: 0 !important;
  right: 0 !important;
}
