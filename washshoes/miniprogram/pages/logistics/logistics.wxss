/* pages/logistics/logistics.wxss */
page{
  height: 100%;
}
.containe{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.top{
  height: 232rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 30rpx 20rpx 50rpx;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 18rpx;
}
.pic{
  position: relative;
}
.t1{
  font-size: 20rpx;
  font-weight: 400;
}
.pic image{
  display: block;
  width: 147rpx;
  height: 147rpx;
}
.art{
  font-size: 26rpx;
  font-weight: 400;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}
.t1{
  position: absolute;
  height: 31rpx;
  line-height: 31rpx;
  width: 100%;
  background: #8EC31FFF;
  text-align: center;
  color: #fff;
  bottom: 0;
  left: 0;
}
.bottom{
  width: 100%;
  height: 100%;
  background: #fff;
}