/* pages/extension/extension.wxss */
page{
  height: 100vh;
  overflow: hidden;
}
.container{
  width: 90%;
  height: 100vh;
  margin: 0 auto;
}
.box{
  position: relative;
  width: 100%;
}
.ma{
  width: 100%;
  height: 580rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: #8ec31f; */
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.ma image{
  display: block;
  width: 302rpx;
  height: 304rpx;
}
.info{
  width: 100%;
  height: 326rpx;
  text-align: center;
  position: relative;
}
.info image{
  display: block;
  width: 180rpx;
  height: 180rpx;
   margin: 0 auto;
 /* margin-top: -90rpx; */
  position: relative;
  top:-90rpx;
  border-radius: 50%;
  z-index: 999;
}
.h1{
  font-size: 32rpx;
  font-weight: bold;
  height: 70rpx;
  line-height: 70rpx;
}
.h2{
  font-size: 26rpx;
  font-weight: 500;
  color: #505050FF;
}
.btn{
  height: 206rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btn view{
  width: 220rpx;
}
button[type=default]{
  background: rgb(0,0,0)!important;
  color: rgb(255,255,255)!important;
}
.cavn{
  display: none;
}