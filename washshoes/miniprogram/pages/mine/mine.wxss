/* pages/mine/mine.wxss */
.container{
  width: 100%;
}
.tab{
  width: 100%;
}
.items{
  width: 90%;
  margin: 0 auto;
}
.item{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom:1px solid #f8f8f8; 
  font-size: 28rpx;
  font-weight: 400;
}
.item image{
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  vertical-align: middle;
}
.coupon{
  width: 90%;
  margin: 0 auto;
}
.itm{
  box-sizing: border-box;
  width: 100%;
  height: 206rpx;
  background: #8EC31F;
  box-shadow:0px 0px 11px 0px rgba(0, 0, 0, 0.33);
  border-radius: 15rpx;
  margin: 30rpx auto;
  padding: 12rpx 0 17rpx 76rpx;
  color: #fff;
}
.info{
  width: 418rpx;
  height: 100%;
  float: left;
  border-right: 1px dashed #3B5948;
}
.big{
  font-size: 107rpx;
  font-weight: 500;
  float: left;
}
.top{
  height: 114rpx;
  overflow: hidden;
}
.ico{
  float: left;
  padding-top: 20rpx;
}
.rt{
  float: left;
  padding: 24rpx 0 0 24rpx;
}
.rt .view{
  font-size: 46rpx;
  font-weight: 500;
}
.rt .text{
  font-size: 24rpx;
  font-weight: 500;
}
.bottom{
  font-size:20rpx;
  font-weight:500;
  height: 84rpx;
  color:rgba(255,255,255,1);
  line-height:84rpx;
  padding-left: 12rpx;
}
.tap{
  float: left;
  padding: 48rpx 44rpx 57rpx 50rpx;
  width:76rpx;

  font-size: 36rpx;
}
.van-tabs__line{
  width: 30px!important;
  left:35px!important;
  background-color:#8EC31FFF!important;
}

.nocoupon image{
  width:354rpx;
  height: 262rpx;
}