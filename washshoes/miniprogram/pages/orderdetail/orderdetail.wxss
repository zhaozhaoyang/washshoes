/* pages/orderdetail/orderdetail.wxss */

page, .container {
  width: 100%;
  height: 100%;
}

.container {
  background: #f8f8f8;
}

.head {
  background: #fff;
  width: 100%;
}

.shop {
  width: 90%;
  margin: 0 auto;
  height: 30rpx;
  line-height: 30rpx;
  text-indent: 24rpx;
  margin: 45rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  border-left: 4px solid rgb(142, 195, 31);
}
.dizhi{
  width: 90%;
}

.adr {
  height: 25rpx;
  width: 80%;
  margin: 40rpx auto 0;
  font-size: 26rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}

.addr {
  height: 70rpx;
  /* line-height: 70rpx; */
  width: 80%;
  margin: 20rpx auto;
  font-size: 26rpx;
  font-weight: 400;
  color: #505050ff;
  display: flex;
  justify-content: space-between;
}
.copy{
  color: rgb(142, 195, 31);
}

.addr1 {
  height: 103rpx;
  line-height: 36rpx;
  width: 80%;
  margin: 20rpx auto 0;
  font-size: 26rpx;
  font-weight: 400;
  color: #505050ff;
}

.goods {
  /* height: 891rpx; */
  width: 100%;
  background: #fff;
  margin: 18rpx auto;
}

.card {
  width: 100%;
  /* height: 154rpx; */
  margin: 26rpx auto;
}

.van-card {
  background: #fff !important;
}

.info {
  width: 100%;
  height: 435rpx;
  margin: 0 auto;
  background: #fff;
}

.van-card__content {
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.van-card__header{
  align-items: center;
}
.van-card__price{
  color:rgba(0,0,0,1)!important;
}