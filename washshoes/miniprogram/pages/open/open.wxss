/* pages/open/open.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.item {
  width: 714rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.itm {
  width: 347rpx;
  height: 196rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 12rpx 0;
}

.t1 {
  font-size: 24rpx;
  font-weight: bold;
  text-align: left;
}

.t2 {
  font-size: 40rpx;
  font-weight: bold;
  color: #f92f38ff;
  text-align: center;
}

.t3 {
  font-size: 22rpx;
  font-weight: 400;
  text-align: right;
}

.tips {
  width: 100%;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 88rpx;
  height: 88rpx;
  color: #505050ff;
  padding: 0 18rpx;
  box-sizing: border-box;
  /* padding-top: 60rpx; */
}

.tips image {
  vertical-align: middle;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
}

.btn {
  width: 562rpx;
  height: 88rpx;
  margin: 100rpx auto;
}

.active {
  border: 2px solid #999;
}

.top {
  width: 100%;
  height: 320rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.top>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
}

.money {
  width: 100%;
  margin-top: 60rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}

.vip,.price {
  font-size: 28rpx;
  color: #fff;
}

.vip {
  margin-top: 96rpx;
}

.price {
  margin-top: 8rpx;
}

.num {
  font-size: 72rpx;
}

.reduce {
  font-size: 24rpx;
  text-align: center;
}
