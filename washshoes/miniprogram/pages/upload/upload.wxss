/* pages/upload/upload.wxss */
.pics{
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-content:space-around; 
}
.pic{
  width: 200rpx;
  height: 200rpx;
  box-shadow:0px 0px 20px 0px rgba(0, 0, 0, 0.07), 0px 0px 12px 0px rgba(0, 0, 0, 0.01);
  border-radius:10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}
.desc{
  font-size: 28rpx;
}
.pic .tu{
  display: block;
  width: 148rpx;
  height: 148rpx;
}
.pic .cha{
  position: absolute;
  right: -10rpx;
  top:-10rpx;
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.notice{
  width: 90%;
  margin: 0 auto;
  font-size: 24rpx;
  font-weight: 400;
  color: #505050;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.notice image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.notice text{
  padding-left: 20rpx;
}
.btn{
  width: 90%;
  margin: 136rpx auto 0;
}